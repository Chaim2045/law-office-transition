{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "firebase": "readonly",
    "validatePassword": "readonly",
    "updatePassword": "readonly",
    "initializePassword": "readonly",
    "saveToFirebase": "readonly",
    "loadFromFirebase": "readonly",
    "deleteFromFirebase": "readonly",
    "loadAllDataFromFirebase": "readonly",
    "KeyboardShortcuts": "readonly",
    "ConfirmDialog": "readonly",
    "LoadingStateManager": "readonly",
    "HistoryManager": "readonly",
    "showTab": "readonly",
    "announceToScreenReader": "readonly",
    "announceNavigationChange": "readonly",
    "announceSearchResults": "readonly",
    "announceEditModeChange": "readonly",
    "announceUndoRedo": "readonly",
    "searchCount": "readonly",
    "editMode": "readonly",
    "showToast": "readonly"
  },
  "rules": {
    "func-names": "warn",
    "no-lonely-if": "warn",
    "no-console": "warn",
    "no-alert": "warn",
    "no-restricted-globals": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-plusplus": "off",
    "no-undef": "error",
    "no-return-assign": "off",
    "max-classes-per-file": "off",
    "class-methods-use-this": "off",
    "no-new": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-param-reassign": ["error", { "props": false }],
    "consistent-return": "off",
    "no-shadow": "warn",
    "prefer-arrow-callback": "warn",
    "arrow-body-style": "off",
    "prefer-template": "warn",
    "prefer-destructuring": "off",
    "max-len": [
      "warn",
      {
        "code": 100,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
